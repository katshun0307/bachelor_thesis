\newcommand{\Terms}{
    \begin{equation*}\tag{terms}
        \begin{aligned}
            t \Coloneqq\\
                &x\\  
                &\lambda x\COL T. t\\
                &t\mysp t \\
                &\mynext{t}\\
                &\myprev{t}\\
                &\myid{t}\\
                &\myidpeel{t}{x}{t}\\
        \end{aligned}
    \end{equation*}
}

\newcommand{\IndexedTerms}{
    \begin{equation*}\tag{indexed terms}
        \begin{aligned}
            t' \Coloneqq\\
                & \myval{t}{d} \mysp (d \in \mathbb{N}) \\
        \end{aligned}
    \end{equation*}
}

\newcommand{\Values}{
    \begin{equation*}\tag{values}
        \begin{aligned}
            v \Coloneqq\\
                &\mylam{x}{T}{t}\\
                &\mynext{v}\\
                &\myid{v}\\
                &\myidpeel{v}{x}{v}\\
            \end{aligned}
    \end{equation*}
}

\newcommand{\IndexedValues}{
    \begin{equation*}\tag{indexed values}
        \begin{aligned}
            v' \Coloneqq\\
                & \myval{v}{d} \mysp (d \in \mathbb{N})
        \end{aligned}
    \end{equation*}
}

\newcommand{\Types}{
    \begin{equation*}\tag{types}
        \begin{aligned}
            T \Coloneqq\\
                &X\\ 
                &\textbf{Eq}_T\\
                &\Pi x\COL T. T\\
                &T\mysp t\\
                &\bigcirc T\\
        \end{aligned}
    \end{equation*}
}

\newcommand{\Kinds}{
    \begin{equation*}\tag{kinds}
        \begin{aligned}
            K \Coloneqq\\
                &*\\ 
                &\Pi x\COL T. K\\
        \end{aligned}
    \end{equation*}
}

\newcommand{\Contexts}{
    \begin{equation*}\tag{contexts}
        \begin{aligned}
            \Gamma \Coloneqq\\
                &\bullet\\
                &\Gamma, x \mysncln{n} T\\
                &\Gamma, X\mydbcln{n} K\\
        \end{aligned}
    \end{equation*}
}

\newcommand{\WFContext}{
    \begin{equation*}\tag{Well-formed Context}
        \begin{aligned}
            \vdash \Gamma
        \end{aligned}
    \end{equation*}
}

\newcommand{\WFKind}{
    \begin{equation*}\tag{Well-formed Kind}
        \begin{aligned}
            \Gamma \myvdash{n} K
        \end{aligned}
    \end{equation*}
}

\newcommand{\WFType}{
    \begin{equation*}\tag{Well-formed Type}
        \begin{aligned}
            \Gamma \myvdash{n} T
        \end{aligned}
    \end{equation*}
}

\newcommand{\KindJudgment}{
    \begin{equation*}\tag{Kind Judgment}
        \begin{aligned}
            \Gamma \myvdash{n} t \DCOL K
        \end{aligned}
    \end{equation*}
}

\newcommand{\TypeJudgment}{
    \begin{equation*}\tag{Type Judgment}
        \begin{aligned}
            \Gamma \myvdash{n} t \COL T
        \end{aligned}
    \end{equation*}
}

\newcommand{\KindEquivalenceJudgment}{
    \begin{equation*}\tag{Kind Equivalence Judgment}
        \begin{aligned}
                \Gamma \myvdash{n} K_1 \myequiv{0} K_2 
            \end{aligned}
        \end{equation*}
}

\newcommand{\TypeEquivalenceJudgment}{
    \begin{equation*}\tag{Type Equivalence Judgment}
